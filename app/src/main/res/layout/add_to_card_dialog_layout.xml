<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/_2sdp">

    <LinearLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"
        android:background="@drawable/rounded_primary_left_chat_border">

        <TextView
            android:id="@+id/dialog_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:fontFamily="@font/nunito_regular"
            android:text="Add to card"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_Large_Size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/rounded_primary_left_chat_border">

            <EditText
                android:id="@+id/ed_quentity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/colorBlack"
                android:fontFamily="@font/nunito_light"
                android:hint="Quantity"
                android:padding="@dimen/_5sdp"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/text_Medium_Size" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:background="@drawable/rounded_primary_left_chat_border">

            <EditText
                android:id="@+id/ed_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:backgroundTint="@color/colorBlack"
                android:fontFamily="@font/nunito_light"
                android:hint="Notes..."
                android:padding="@dimen/_5sdp"
                android:imeOptions="actionNext"
                android:maxLength="50"
                android:gravity="start"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/text_Medium_Size" />

        </RelativeLayout>

        <Button
            android:id="@+id/add_card_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/continue_btn_bg"
            android:fontFamily="@font/josefinsans_regular"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="@drawable/continue_btn_text_color"
            android:textSize="@dimen/text_Large_Size" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_1sdp"
        android:gravity="center">

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ico_close_popup_a_black"
            />
    </RelativeLayout>

</RelativeLayout>
