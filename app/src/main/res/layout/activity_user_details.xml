<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_screen_bg"
    tools:context="com.manibhadra.activity.admin.UserDetailsActivity">


    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/user_img"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:scaleType="centerCrop"
        app:siBorderWidth="0.7dp"
        app:siBorderColor="@color/colorPrimaryDark"
        app:siRadius="@dimen/_5sdp"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/_90sdp"
        android:src="@drawable/ico_user_placeholder"
        android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:behavior_peekHeight="300dp"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/_10sdp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_3sdp"
                app:cardBackgroundColor="@color/colorWhite"
                android:elevation="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ly_uper_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginLeft="@dimen/_2sdp">

                            <TextView
                                android:id="@+id/tv_fullName"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/text_Large_Size"
                                android:textColor="@color/colorBlack"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:maxLength="25"
                                android:fontFamily="@font/josefinsans_regular" />



                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_11sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_solid"/>

                            <TextView
                                android:layout_width="@dimen/_2sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@color/colorGray"/>

                            <TextView
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_11sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_solid"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/text_Medium_Size"
                                android:textColor="@color/colorPrimary"
                                android:text="Name"
                                android:fontFamily="@font/nunito_regular"
                                android:layout_gravity="start"/>

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_primary_left_chat_border"
                                android:fontFamily="@font/josefinsans_regular"
                                android:padding="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Small_Size" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/_2sdp"
                                android:layout_height="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:background="@color/colorGray"/>

                            <TextView
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_11sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_solid"/>

                            <TextView
                                android:layout_width="@dimen/_2sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@color/colorGray"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/text_Medium_Size"
                                android:textColor="@color/colorPrimary"
                                android:text="Email Address"
                                android:fontFamily="@font/nunito_regular"
                                android:layout_gravity="start"/>

                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_primary_left_chat_border"
                                android:fontFamily="@font/josefinsans_regular"
                                android:padding="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Small_Size" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="@dimen/_2sdp"
                                android:layout_height="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:background="@color/colorGray"/>

                            <TextView
                                android:layout_width="@dimen/_11sdp"
                                android:layout_height="@dimen/_11sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_solid"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textSize="@dimen/text_Medium_Size"
                                android:textColor="@color/colorPrimary"
                                android:text="Contact number"
                                android:fontFamily="@font/nunito_regular"
                                android:layout_gravity="start"/>

                            <TextView
                                android:id="@+id/tv_contact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_primary_left_chat_border"
                                android:fontFamily="@font/josefinsans_regular"
                                android:padding="@dimen/_7sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_Small_Size" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/header_bg">

        <TextView
            android:id="@+id/profile_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="User Details"
            android:fontFamily="@font/josefinsans_regular"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_XXLarge_Size" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/back_arrow_ico"
            android:tint="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_isBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefinsans_regular"
            android:textColor="@color/colorBlack"
            android:text="Block"
            android:textSize="@dimen/text_Medium_Size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/like_chat_direction_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_centerInParent="true"
        android:background="@color/colorWhiteTransparent"
        android:visibility="gone">


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:alpha="0.5"/>
    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>
